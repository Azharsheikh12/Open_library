<div class="col-lg-8 mb-">
      <div class="card shadow">
            <div class="card-body">
                  <table>
                        <tr>	
                        <td><p><b>Name: </b></p></td>
                        <td><p><%= comment.name %></p></td>
                        </tr>
                        <tr>
                        <td><p><b>Comment: </b></p></td>
                        <td><p><%= comment.body %></p></td>
                        </tr>
                        <p><%= time_ago_in_words(comment.created_at) %></p>
                        <%if current_user && current_user.admin %>
                        <td><p> <%= link_to 'Delete',[comment.post,comment],class: "btn btn-danger" ,method: :delete, data: {cofirm: 'Are you sure?'} %></p></td>
                        <%end%>
                  </table>
            </div>
      </div>
</div>